<!--Chatbot script --> 
<script>
    document.addEventListener('DOMContentLoaded', () => {
     const chatbotToggle = document.getElementById('chatbot-toggle');
     const chatbot = document.getElementById('chatbot');
     const chatbotClose = document.getElementById('chatbot-close');
     const chatbotMessages = document.getElementById('chatbot-messages');
     const chatbotInput = document.getElementById('chatbot-input');
     const chatbotSend = document.getElementById('chatbot-send');
    

    // Toggle chatbot visibility
    chatbotToggle?.addEventListener('click', () => {
        if (chatbot) {
            chatbot.style.display = chatbot.style.display === 'none' ? 'block' : 'none';
        }
    });

    // Close chatbot
     chatbotClose?.addEventListener('click', () => {
        if (chatbot) {
            chatbot.style.display = 'none';
        }
    });

    // Handle message sending
     chatbotSend?.addEventListener('click', () => {
        const userMessage = (chatbotInput as HTMLInputElement)?.value.trim();
        if (userMessage) {
            // Display user message
            const userBubble = document.createElement('div');
            userBubble.textContent = userMessage;
            userBubble.style.cssText = 'text-align: right; color: blue; margin: 5px;';
            chatbotMessages?.appendChild(userBubble);

            // Respond with predefined answers
            const botBubble = document.createElement('div');
            botBubble.style.cssText = 'text-align: left; color: black; margin: 5px;';
            botBubble.textContent = getBotResponse(userMessage);
            chatbotMessages?.appendChild(botBubble);

            // Clear input and scroll to the bottom
            if (chatbotInput) {
                (chatbotInput as HTMLInputElement).value = '';
            }
            if (chatbotMessages) {
                chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
            }
        }
    });

    // Chatbot response logic
    function getBotResponse(message: string): string {
        message = message.toLowerCase();
        if (message.includes('hello') || message.includes('hi') || message.includes('hey')) {
            return 'Hello! How can I help you today?';
        } else
        if (message.includes('how are you')) {
            return 'I am a bot, I do not have feelings, but thanks for asking!';
        } else
        if (message.includes('name')|| message.includes('who are you') || message.includes('who')) {
            return 'I am Alejandro\'s CV bot! How can I help?';
        } else if (message.includes('experience')) {
            return 'Alejandro has experience as a Financial Analyst and Commercial Banking Manager.';
        } else if (message.includes('skills')) {
            return 'Alejandro is skilled in Data Science, Python, Power BI, and Tableau.';
        } else if (message.includes('education')) {
            return 'Alejandro has a Master of Science in Data Science and a Master of Science in Health Economics.';
        } else if (message.includes('Who does Alex love') || message.includes('que ama Alex') || message.includes('love') || message.includes('loves')) {
            return 'Alex loves Georgina to the moon and back';
        } else {
            return 'Sorry, I am still learning and cannot answer that question!, PS : I swear I learn fast!, Also, you can directly contact Alex at alexbusinessjl@gmail.com and he will be happy to help you!';
        }       
   }
});
</script>

